.container
  .row
    .col-md-12
      .pr-wrap
        .pass-reset
          %label
            Enter the email you signed up with
          %input{:placeholder => "Email", :type => "email"}/
          %input.pass-reset-submit.btn.btn-success.btn-sm{:type => "submit", :value => "Submit"}/
      .wrap
        %p.form-title
          Sign In
        %form.login
          %input{:placeholder => "Username", :type => "text"}/
          %input{:placeholder => "Password", :type => "password"}/
          %input.btn.btn-success.btn-sm{:type => "submit", :value => "Sign In"}/
          .remember-forgot
            .row
              .col-md-6
                .checkbox
                  %label
                    %input{:type => "checkbox"}/
                    Remember Me
              .col-md-6.forgot-pass-content
                %a.forgot-pass{:href => "javascription:void(0)"} Forgot Password
